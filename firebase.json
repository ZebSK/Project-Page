{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },

  "emulators": {
    "hosting": {
      "port": 5000,
      "host": "0.0.0.0"
    }
  },

  "firestore": {
    "rules": "config/firestore.rules",
    "indexes": "config/firestore.indexes.json"
  },

  "storage": {
    "rules": "config/storage.rules"
  }
}